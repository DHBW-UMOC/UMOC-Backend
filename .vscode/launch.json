{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/src",
                "PYTHONSTARTUP": "${workspaceFolder}/vscode_pytest_bootstrap.py"
            }
        },
        {
            "name": "Python: Run Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-xvs",
                "--import-mode=importlib"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/src",
                "PYTHONSTARTUP": "${workspaceFolder}/vscode_pytest_bootstrap.py"
            }
        },
        {
            "name": "Python: Run Current Test File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-xvs",
                "--import-mode=importlib",
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/src",
                "PYTHONSTARTUP": "${workspaceFolder}/vscode_pytest_bootstrap.py"
            }
        },
        {
            "name": "Python: Run Application",
            "type": "python",
            "request": "launch",
            "module": "src.main",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder};${workspaceFolder}/src"
            }
        }
    ]
}
